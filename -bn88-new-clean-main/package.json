{
  "name": "bn88-new-clean-workspace",
  "version": "1.0.0",
  "description": "BN88 Full-stack LINE messaging platform workspace",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "check:all": "pwsh -ExecutionPolicy Bypass -File ./src/scripts/dev-check.ps1",
    "check:line": "pwsh -ExecutionPolicy Bypass -File ./src/scripts/dev-check-line.ps1",
    "dev:check:chat": "tsx src/scripts/dev-check-chat.ts",
    "check:extended": "pwsh -ExecutionPolicy Bypass -File ./src/scripts/dev-check-extended.ps1",
    "seed": "tsx src/scripts/seed.ts",
    "seed:admin": "tsx src/scripts/seedAdmin.ts",
    "seed:bot": "tsx src/scripts/seedBot.ts",
    "seed:dev": "tsx src/scripts/seedDev.ts",
    "prisma:migrate": "prisma migrate dev",
    "prisma:reset": "prisma migrate reset --force",
    "prisma:studio": "prisma studio",
    "migrate:deploy": "prisma migrate deploy",
    "dev": "npx tsx watch src/server.ts",
    "doctor": "node -v && npm -v && node -e \"const fs=require('fs');const p='node_modules/.bin/tsx';const PORT=process.env.PORT||'3000';console.log(fs.existsSync(p)?'tsx OK: '+p:'tsx MISSING: '+p);console.log('PORT='+PORT);\"",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript-eslint": "^8.50.1"
  }
}
