# Line Engagement Platform - Environment Configuration
# Copy this file to .env and fill in your credentials

# Server Configuration
PORT=8080
BASE_URL=http://localhost:8080

# Database Configuration (PostgreSQL)
# For Docker Compose (default): postgresql://postgres:postgres@postgres:5432/line_platform
# For local dev: postgresql://postgres:postgres@localhost:5432/line_platform
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/line_platform

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# PostgreSQL Configuration (used by entrypoint)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres

# Prisma Migration Mode (dev or deploy)
PRISMA_MIGRATE_MODE=deploy

# LINE Messaging API Credentials
# Get these from: https://developers.line.biz/console/
LINE_CHANNEL_SECRET=your_line_channel_secret_here
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token_here

# LINE Login Credentials (Optional - for LINE Login integration)
LINE_LOGIN_CHANNEL_ID=
LINE_LOGIN_CHANNEL_SECRET=
LINE_LOGIN_REDIRECT_URI=http://localhost:8080/auth/callback

# LIFF App Configuration (Optional - for LINE Front-end Framework)
LIFF_APP_ID=

# LINE Pay Configuration (Optional - for LINE Pay integration)
LINE_PAY_BASE=https://sandbox-api-pay.line.me
LINE_PAY_CHANNEL_ID=
LINE_PAY_CHANNEL_SECRET=
LINE_PAY_CONFIRM_URL=http://localhost:8080/payment/confirm

# Ads Access Token (Optional - for LINE Ads integration)
ADS_ACCESS_TOKEN=

# Bull Board (Queue Management UI)
# Access: http://localhost:8080/admin/queues
BULL_BOARD_USER=admin
BULL_BOARD_PASS=admin123

# Worker Configuration
WORKER_CONCURRENCY=5
WORKER_RATE_MAX=10
WORKER_RATE_DURATION_MS=1000

# Node Environment
NODE_ENV=development
